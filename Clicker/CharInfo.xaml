<Window x:Class="Clicker.CharInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clicker"
        mc:Ignorable="d"
        Title="Информация о персонаже" Height="300" Width="300" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <Rectangle Height="271" Stroke="Black" Width="294">
            <Rectangle.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF6A6A6A" Offset="1"/>
                    <GradientStop Color="#FFB8B8B8"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Grid VerticalAlignment="Top" Height="199">
            <Image x:Name="charImage" Source="Images/miscImages/spinner.gif"/>
        </Grid>
        <Rectangle x:Name="charColor" Fill="#FF919191" Height="72" Margin="0" Stroke="Black" VerticalAlignment="Bottom" Width="294"/>
        <Label x:Name="charNameLabel" Content="Нажмите на кнопку" Margin="0" VerticalAlignment="Bottom" Height="72" Width="294" FontSize="24" FontFamily="MV Boli" Foreground="White"/>
    </Grid>
</Window>
